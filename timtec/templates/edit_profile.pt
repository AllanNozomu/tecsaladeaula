<metal:main use-macro="load: base.pt">
<div id="course-intro" class="container" metal:fill-slot="container">
    <!-- PROFILE -->
    <div id="profile" class="container">
        <form class="form-horizontal">
            <div class="row">
                <div class="col-sm-3 col-lg-3 col-offset-1">
                    <fieldset>
                        <script type="text/javascript" charset="utf-8">
                            $(document).ready(function() {
                                function onFileSelected(event) {
                                    var selectedFile = event.target.files[0]
                                    var reader = new FileReader()
                                    var imgtag = document.getElementById("profile-avatar");
                                    imgtag.title = selectedFile.name

                                    reader.onload = function(event) {
                                        imgtag.src = event.target.result
                                    };

                                    reader.readAsDataURL(selectedFile)
                                }
                            
                                $("#upload-avatar").change(onFileSelected)
                            })
                        </script>
                        
                        <label for="upload-avatar" class="col-sm-12 col-lg-12 left right">
                            <div class="icon-user"></div>
                            <div class="upload-tip">
                                Upload image
                            </div>
                            <img id="profile-avatar" src="">
                        </label>
                        <input type="file" name="upload-avatar" id="upload-avatar" class="hidden"/>
                    </fieldset>
                </div>

                <div class="col-sm-7 col-lg-7">
                    <fieldset>
                        <div class="heading textleft">
                            <h3>Perfil</h3>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Nome Público</label>
                            <div class="col-sm-9 col-lg-9">
                                <input type="text" class="form-control" placeholder="O nome que os outros usuários verão">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Profissão</label>
                            <div class="col-sm-9 col-lg-9">
                                <input type="text" class="form-control" placeholder="O que você faz?">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Cidade</label>
                            <div class="col-sm-9 col-lg-9">
                                <input type="text" class="form-control" placeholder="Qual cidade você vive?">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Site</label>
                            <div class="col-sm-9 col-lg-9">
                                <input type="text" class="form-control" placeholder="Você possui algum site pessoal?">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Bio</label>
                            <div class="col-sm-9 col-lg-9">
                                <textarea class="form-control" rows="7" placeholder="Escreve um pouco sobre você..."></textarea>
                            </div>
                        </div>
                    </fieldset>
            
                    <fieldset>
                        <div class="heading textleft">
                            <h3>Conta</h3>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Nome Completo</label>
                            <div class="col-sm-9 col-lg-9">
                                <div class="col-sm-6 col-lg-6 left">
                                    <input type="text" class="form-control" placeholder="Primeiro nome">
                                </div>
                                <div class="col-sm-6 col-lg-6 right">
                                    <input type="text" class="form-control" placeholder="Último nome">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">E-mail</label>
                            <div class="col-sm-9 col-lg-9">
                                <input type="e-mail" class="form-control" placeholder="Qual o seu email?">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 col-lg-3 control-label">Senha</label>
                            <div class="col-sm-9 col-lg-9">
                                <div class="col-sm-6 col-lg-6 left">
                                    <input type="password" class="form-control" placeholder="Nova Senha">
                                </div>
                                <div class="col-sm-6 col-lg-6 right">
                                    <input type="password" class="form-control" placeholder="Nova Senha Novamente">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    
                    <div class="submit">
                        <button type="submit" class="btn btn-info">Salvar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- END PROFILE -->
</div>
</metal:main>